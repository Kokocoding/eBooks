<Window x:Class="eBooks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:eBooks"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized"
        Background="Black">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        
        <Image x:Name="eBook" Grid.ColumnSpan="2"></Image>
        
        <!-- 第一個按鈕，佔據第一個欄位 -->
        <Button Click="PreviousButton_Click" Opacity="0" Grid.Column="0" HorizontalAlignment="Stretch"></Button>

        <!-- 第二個按鈕，佔據第二個欄位 -->
        <Button Click="NextButton_Click" Opacity="0" Grid.Column="1" HorizontalAlignment="Stretch"></Button>
    </Grid>
</Window>
